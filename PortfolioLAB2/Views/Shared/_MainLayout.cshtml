<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title> @ViewData["Tytul"] - Piszcz </title>

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

	<link href="~/css/main-style.css" rel="stylesheet" />

	@RenderSection("Style", false)


</head>
<body>
	<nav class="navbar">
		<div class="nav-center">
			<div class="nav-header">
				<a asp-action="Index" class="nav-logo">
					<img src="~/grafiki/logo_wlasciwe.png" alt="logo" />
				</a>
				<button type="button" class="nav-btn btn" onclick="ShowMenu()">
					<i class="fa-solid fa-bars"></i>
				</button>

			</div>
			<div class="nav-links">
				<a class="nav-link" asp-action="Omnie">O mnie</a>
				<a class="nav-link" asp-action="Projekty">Projekty</a>
				<a class="nav-link" asp-action="CV">Curriculum Vitae</a>

				<div class="nav-link contact-link">
					<a class="btn" asp-action="Kontakt">Kontakt</a>
				</div>
			</div>
		</div>
	</nav>



	<main class="main-section">
		@RenderBody()
	</main>

	<footer class="footer-section">
		<p> 🍺 Strona wykonana przez <span> Adriannę Piszcz </span> 🍺 </p>
	</footer>



	<!-- Sekcja skryptów -->

	<script src="~/js/site.js"></script>
</body>
</html>